<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

    <body>

        <%- include('./partials/header') %>

            <main class="home">
                <section class="section-contact scroll-m-top" id="contact">

                    <h2>CONTACT ME</h2>
                    <div class="star-lines-container">
                        <span class="line"></span>
                        <i class="fa-solid fa-star star"></i>
                        <span class="line"></span>
                    </div>

                    <form action="" method="post">
                        <div class="group-item">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" autocomplete="off" placeholder="Nombre completo">
                        </div>
                        <div class="group-item">
                            <label for="email">Email Address</label>
                            <input type="text" name="email" id="email" disabled>
                        </div>
                        <div class="group-item">
                            <label for="tel">Phone Number</label>
                            <input type="text" name="tel" id="tel">
                        </div>
                        <div class="group-item">
                            <label for="tel">Message</label>
                            <textarea type="text" name="tel" id="tel" maxlength="10"></textarea>
                        </div>

                        <div class="group-item">
                            <button type="submit" class="btn-send">
                                Send
                            </button>
                        </div>


                    </form>

                </section>
            </main>

            <%- include('./partials/footer') %>
    </body>

</html>